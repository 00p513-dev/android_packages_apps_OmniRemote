<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="TableContentTitle" parent="TextAppearance.AppCompat.Subhead" >
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TableContentTitleWhite" parent="TableContentTitle" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TableContentText" parent="TextAppearance.AppCompat" >
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TableContentTextWhite" parent="TableContentText" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TableContentEditText" parent="Widget.AppCompat.EditText" >
        <item name="android:background">@color/edit_text_background</item>
    </style>

    <style name="HelpText" parent="TextAppearance.AppCompat.Body1" >
        <item name="android:textSize">16sp</item>
    </style>
</resources>
